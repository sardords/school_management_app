<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/mentorSurname"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/edit_background"
        android:hint="Familiyasi"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/mentorName"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_background"
        android:hint="Ismi"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/mentorSurname" />

    <EditText
        android:id="@+id/mentorFatherName"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_background"
        android:hint="Otasining Ismi"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/mentorName" />
</androidx.constraintlayout.widget.ConstraintLayout>